<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/sr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/light_gray"
        android:text="Sunrise"
        app:layout_constraintEnd_toEndOf="@+id/noon"
        app:layout_constraintStart_toStartOf="@+id/noon"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/light_gray"
        android:text="Sunset"
        app:layout_constraintEnd_toEndOf="@+id/noon"
        app:layout_constraintStart_toStartOf="@+id/noon"
        app:layout_constraintTop_toBottomOf="@+id/sr" />

    <Button
        android:id="@+id/noon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/light_gray"
        android:text="noon"
        app:layout_constraintEnd_toEndOf="@+id/tb"
        app:layout_constraintStart_toStartOf="@+id/tb"
        app:layout_constraintTop_toBottomOf="@+id/sn" />

    <Button
        android:id="@+id/tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:backgroundTint="@color/light_gray"
        android:text="Twilight begin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noon" />

    <Button
        android:id="@+id/te"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/light_gray"
        android:text="Twilight end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tb"
        app:layout_constraintStart_toStartOf="@+id/tb"
        app:layout_constraintTop_toBottomOf="@+id/tb" />
</androidx.constraintlayout.widget.ConstraintLayout>